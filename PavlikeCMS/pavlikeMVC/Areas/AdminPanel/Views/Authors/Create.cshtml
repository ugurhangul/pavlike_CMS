@model pavlikeMVC.Models.RegisterViewModel

@{
    ViewBag.Title = "Yeni Kullanıcı";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminPanelLayout.cshtml";
}

<div class="content">
    <div class="row">
        <div class="col-xs-6 ">
            <div class="block block-themed">
                <div class="block-header bg-primary">

                    <h3 class="block-title">Kullanıcı Ekle</h3>
                </div>
                <div class="block-content">

                    @using (Html.BeginForm("Create", "Authors", FormMethod.Post, new { @class = "js-validation-material form-horizontal push-10-t push-10", enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-horizontal">
                            <div class="form-group">
                                <div class="col-xs-12">
                                    <div class="form-material">
                                        @Html.LabelFor(model => model.Name)

                                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "help-block text-right help-block text-right text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-xs-12">
                                    <div class="form-material">
                                        @Html.LabelFor(model => model.Surname)

                                        @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Surname, "", new { @class = "help-block text-right help-block text-right text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-xs-12">
                                    <div class="form-material">
                                        @Html.LabelFor(model => model.DateofBirth)

                                        @Html.EditorFor(model => model.DateofBirth, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.DateofBirth, "", new { @class = "help-block text-right help-block text-right text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-xs-12">
                                    <div class="form-material">
                                        @Html.LabelFor(m => m.Email)
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "help-block text-right help-block text-right text-danger" })


                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-xs-12">
                                    <div class="form-material">
                                        @Html.LabelFor(m => m.Password)
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "help-block text-right help-block text-right text-danger" })


                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-xs-12">
                                    <div class="form-material">
                                        @Html.LabelFor(m => m.ConfirmPassword)
                                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "help-block text-right help-block text-right text-danger" })
                                    </div>
                                </div>
                            </div>



                            <div class="form-group">
                                <div class="col-xs-12">
                                    <div class="form-material">
                                        <div class="col-lg-2 pull-right">
                                            <div class="form-material">
                                                <a href="@Url.Action("Index")" class="btn btn-danger">İptal</a>
                                            </div>
                                        </div>
                                        <div class="col-lg-2 pull-right">
                                            <div class="form-material">
                                                <input type="submit" value="Kaydet" class="btn btn-primary" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>

                    }
                </div>
            </div>
        </div>
    </div>
</div>

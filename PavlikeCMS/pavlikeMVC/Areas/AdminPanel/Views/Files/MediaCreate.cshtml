@{
    ViewBag.Title = "Görsel Yükle";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminPanelLayout.cshtml";
}
<style type="text/css">
    .dz-max-files-reached {
        background-color: red;
    }
</style>
<form action="@Url.Action("MediaCreate")" method="post" enctype="multipart/form-data" class="dropzone" id="dropzoneForm">
    <div class="fallback">
        <input name="file" type="file" multiple />
        <input type="submit" value="Upload" />
    </div>
</form>

<script>
    //File Upload response from the server
    Dropzone.options.dropzoneForm = {
        acceptedFiles: "image/*",
        uploadMultiple: false,
        init: function () {
            this.on("success", function (file) {
                if (this.getUploadingFiles().length === 0 && this.getQueuedFiles().length === 0) {
                    toastr.success("Görseller Yüklendi");
                }
            });
            this.on("error", function (file) {
                toastr.error("Görsel yüklenirken hata!");
            });

        }
    };

</script>